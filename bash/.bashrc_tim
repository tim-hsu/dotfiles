#
# ~/.bashrc_tim
#

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$("$HOME/ext/miniconda3/bin/conda" 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "$HOME/ext/miniconda3/etc/profile.d/conda.sh" ]; then
        . "$HOME/ext/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="$HOME/ext/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

# environmental variables 
export EDITOR=nvim

# set up keychain
[ $(command -v keychain) ] && eval $(keychain --quiet --eval id_rsa)

# drop into fish
[[ $(ps -p $PPID -o command | awk 'NR>1') != "fish" ]] && exec fish
